    <script>
        // Cek apakah pengguna sudah login
        if (!sessionStorage.getItem("isLoggedIn")) {
            // Jika tidak login, redirect ke halaman login
            window.location.href = "login.html";
        }
    </script>

    <!-- Konten Halaman Utama -->
